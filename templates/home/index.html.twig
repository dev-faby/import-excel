{% extends 'base.html.twig' %}

{% block title %}Listes d'employer
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="row">
					<div class="col-12 my-3">
						<a class="btn btn-primary" href="{{ path('app_new')}}">Ajouter un employer</a>
					</div>
					<div class="col-12">
						<div class="table-responsive mb-3">
							<table id="datatable" class="table table-striped hover display" style="width:100%">
								<thead>
									<tr>
										<th>Compte Affaire</th>
										<th>Compte évènement (Veh)</th>
										<th>Compte dernier évènement (Veh)</th>
										<th>Numéro de fiche</th>
										<th>Libellé civilité</th>
										<th>Propriétaire actuel du véhicule</th>
										<th>Nom</th>
										<th>Prénom</th>
										<th>N° et Nom de la voie</th>
										<th>Complément adresse 1</th>
										<th>Code postal</th>
										<th>Ville</th>
										<th>Téléphone domicile</th>
										<th>Téléphone portable</th>
										<th>Téléphone job</th>
										<th>Email</th>
										<th>Date de mise en circulation</th>
										<th>Date achat (date de livraison)</th>
										<th>Date dernier évènement (Veh)</th>
										<th>Libellé marque (Mrq)</th>
										<th>Libellé modèle (Mod)</th>
										<th>Version</th>
										<th>VIN</th>
										<th>Immatriculation</th>
										<th>Type de prospect</th>
										<th>Kilométrage</th>
										<th>Libellé énergie (Energ)</th>
										<th>Vendeur VN</th>
										<th>Vendeur VO</th>
										<th>Commentaire de facturation (Veh)</th>
										<th>Type VN VO</th>
										<th>Numéro de dossier VN VO</th>
										<th>Intermediaire de vente VN</th>
										<th>Date évènement (Veh)</th>
										<th>Origine évènement (Veh)</th>
									</tr>
								</thead>
								<tbody>
									{% for employer in employers %}

										<tr>
											<td>{{ employer.CompteAffaire }}</td>
											<td>{{ employer.CompteEvenement }}</td>
											<td>{{ employer.CompteDernierEvenement }}</td>
											<td>{{ employer.NumeroDeFiche }}</td>
											<td>{{ employer.LibelleCivilite }}</td>
											<td>{{ employer.ProprietaireActuelDuVehicule }}</td>
											<td>{{ employer.Nom }}</td>
											<td>{{ employer.Prenom }}</td>
											<td>{{ employer.NumNomDeLaVoie }}</td>
											<td>{{ employer.ComplementAdresse1 }}</td>
											<td>{{ employer.CodePostal }}</td>
											<td>{{ employer.Ville }}</td>
											<td>{{ employer.TelephoneDomicile }}</td>
											<td>{{ employer.TelephonePortable }}</td>
											<td>{{ employer.TelephoneJob }}</td>
											<td>{{ employer.Email }}</td>
											<td>{{ employer.DateDeMiseEnCirculation|date("d/m/Y") }}</td>
											<td>{{ employer.DateAchat|date("d/m/Y") }}</td>
											<td>{{ employer.DateDernierEvenement|date("d/m/Y") }}</td>
											<td>{{ employer.LibelleMarque }}</td>
											<td>{{ employer.LibelleModele }}</td>
											<td>{{ employer.Version }}</td>
											<td>{{ employer.Vin }}</td>
											<td>{{ employer.Immatriculation }}</td>
											<td>{{ employer.TypeDeProspect }}</td>
											<td>{{ employer.Kilometrage }}</td>
											<td>{{ employer.LibelleEnergie }}</td>
											<td>{{ employer.VendeurVn }}</td>
											<td>{{ employer.VendeurVo }}</td>
											<td>{{ employer.CommentaireDeFacturation }}</td>
											<td>{{ employer.TypeVnVo }}</td>
											<td>{{ employer.NumeroDeDossierVnVo }}</td>
											<td>{{ employer.IntermediaireDeVenteVn }}</td>
											<td>{{ employer.DateEvenementVeh|date("d/m/Y") }}</td>
											<td>{{ employer.OrigineEvenementVeh }}</td>
											
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>

					</div>
				</div>

			</div>
		</div>
	</div>
{% endblock %}
